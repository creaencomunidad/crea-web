---
import SectionTitle from "@/components/SectionTitle.astro";
import SideBySide from "@/components/SideBySide.astro";
import type { AboutData } from "@/config/landing.interface";

interface Props {
  data: AboutData;
}

const { data } = Astro.props;
---

<section id="quienes-somos" class="flex flex-col mb-20 gap-y-28 pt-16">
  <SectionTitle>
    {data.title}
  </SectionTitle>
  <div>
    {
      data.aboutPieces.map((aboutPiece, idx) => (
        <SideBySide data={aboutPiece} reversed={(idx + 1) % 2 === 0} />
      ))
    }
  </div>
</section>
